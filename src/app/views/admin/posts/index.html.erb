<% @title = "投稿記事一覧" %>
<h1><%=@title %></h1>
<%= link_to "顧客一覧へ戻る", admin_customers_path %>
<div>
  <table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <%# -------- %>
      <td><%= post.customer.name %></td>
      <%# -------- %>
      <td><%= post.created_at.to_s(:datetime_jp) %></td>
      <td><%= post.updated_at.to_s(:datetime_jp) %></td>
      <td><%= link_to '詳細', admin_customer_post_path(id: post.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
</div>
<% @title = "投稿記事一覧" %>
<h1><%=@title %></h1>
<div>
  <%= link_to "新規投稿画面", :new_customer_post %>
</div>
<br>
<div>
  <table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <%# -------- %>
      <td><%= post.customer.name %></td>
      <%# -------- %>
      <td><%= post.created_at.to_s(:datetime_jp) %></td>
      <td><%= post.updated_at.to_s(:datetime_jp) %></td>
      <td><%= link_to '詳細', customer_post_path(post) %></td> 
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
</div>
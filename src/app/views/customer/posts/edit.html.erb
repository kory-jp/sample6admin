<% @title = "投稿編集画面" %>
<h1><%=@title %></h1>
<div style="margin: 20px"> 
  <%= form_with model: @post, url: [:customer, @post] do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <%= render "form", f: f %>
    <div>
      <%= f.submit '保存'%>
      <%= link_to "削除", [:customer, @post], method: :delete, data: { confirm: "本当に削除しますか？"} %>
    </div>
  <%end%>
</div>
